{
  "name": "waveguide-generator",
  "version": "1.0.0-alpha-7.5",
  "description": "Waveguide Generator: Interactive 3D visualization and optimization platform for acoustic waveguide design.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node scripts/start-all.js",
    "start:frontend": "node scripts/dev-server.js",
    "start:backend": "cd server && python3 app.py",
    "dev": "node scripts/dev-server.js",
    "build": "webpack --mode production",
    "test": "node --test \"tests/**/*.test.js\"",
    "test:server": "cd server && python3 -m unittest discover -s tests",
    "diag:payload": "node scripts/diagnostics/build-canonical-payload-from-reference.js",
    "diag:geometry": "node scripts/diagnostics/check-tritonia-geometry-artifacts.js",
    "diag:occ:tritonia": "python3 scripts/diagnostics/build-occ-mesh-tritonia.py",
    "diag:occ:closed": "python3 scripts/diagnostics/check-occ-closed-mesh.py"
  },
  "keywords": [
    "3d",
    "visualization",
    "horn-design",
    "acoustics",
    "bem-solver"
  ],
  "author": "Magnus Andersen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/m3gnus/waveguide-generator.git"
  },
  "dependencies": {
    "express": "^5.2.1",
    "jszip": "^3.10.1",
    "three": "^0.160.0"
  },
  "devDependencies": {
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  }
}
